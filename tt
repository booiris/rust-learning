#!/bin/bash

index=1 
filename=""
for arg in $*                     
do
    if [ $index -eq 1 ]
    then
        arg=${arg%.*}
    fi
    filename=$filename"_"$arg
    let index+=1
done

f="l"$filename".rs"

file=src/code/$f

if test -f $file; then
    echo "$file exist"
    exit 0
fi


touch $file
content=$(cat template)

echo "pub mod l$filename;" >>src/code/mod.rs
echo "$content" >$file