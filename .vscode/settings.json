{
    "editor.fontSize": 15,
    "terminal.integrated.fontSize": 15,
    "gopls": {
        "directoryFilters": [
            "-top_author",
            "-src",
            "-*_test",
        ]
    },
    "code-runner.runInTerminal": false,
    // 运行代码之前清除之前的输出
    "code-runner.clearPreviousOutput": true,
    "code-runner.fileDirectoryAsCwd": true,
    "code-runner.executorMap": {
        "cpp": "g++ $fileName -o $workspaceRoot/build/$fileNameWithoutExt.exe && $workspaceRoot/build/$fileNameWithoutExt.exe",
        // g++ $fileName -o build/$fileNameWithoutExt && .\\build\\$fileNameWithoutExt
        "rust": "rustc $fileName -o $workspaceRoot/build/$fileNameWithoutExt &&RUST_BACKTRACE=1 cat $workspaceRoot/ini | $workspaceRoot/build/$fileNameWithoutExt",
    },
    "code-runner.saveFileBeforeRun": true,
    "code-runner.preserveFocus": false,
    "files.exclude": {
        "build": true,
        "target": true,
        "Cargo.lock": true,
        // "Cargo.toml": true,
    },
    "github.copilot.enable": {
        "rust": false,
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": false
    },
}